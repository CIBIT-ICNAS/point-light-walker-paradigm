function success = sendTrigger(portTrigg,portAddress, syncBox, message)

% Default return variable.
success = 0;

% Send trigger right before the experiment starts
if portTrigg
    if syncBox==1
        lptwrite(PortAddress, message);
        WaitSecs(0.004);
        lptwrite(PortAddress, 0);
        success=1;
    elseif syncBox==2
        io64(ioObj, PortAddress, message);
        WaitSecs(0.004);
        io64(ioObj, PortAddress, 0);
        success=1;
    end
end


end